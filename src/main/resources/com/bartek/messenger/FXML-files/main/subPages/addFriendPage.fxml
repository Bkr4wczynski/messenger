<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="985.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bartek.messenger.controllers.mainPage.subPages.AddFriendPageController">
   <children>
      <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="400.0" prefWidth="1000.0" spacing="50.0">
         <children>
            <Label alignment="CENTER" prefWidth="1000.0" text="Add Friend">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <TextField fx:id="searchBar" prefHeight="40.0" prefWidth="600.0" promptText="Find person">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <Button mnemonicParsing="false" onAction="#sendFriendRequest" text="Send Friend Request">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Label fx:id="responseLabel" alignment="CENTER" prefWidth="1000.0">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
